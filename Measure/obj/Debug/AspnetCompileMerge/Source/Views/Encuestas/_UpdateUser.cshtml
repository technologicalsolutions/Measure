@using Measure.ViewModels.Usuario

@model ViewUpdateUser

@foreach (ViewUserProperties item in Model.DataPage)
{
    <div class="col-md-6 col-12">
        <div class="row mt-1">
            <div class="col-12">
                <strong>@item.Label @(item.Confirm ? "*" : "")</strong>
            </div>
            <div class="col-12">
                <div class="row">
                    @switch (item.Name)
                    {
                        case "CEmpleadosId":
                            <div class="form-group">
                                @Html.DropDownList(item.Name, Model.CEmpleados, htmlAttributes: new { @class = "form-select update", data_init_plugin = "select2", required = "required" })
                            </div>
                            break;
                        case "IndustriaId":
                            <div class="form-group">
                                @Html.DropDownList(item.Name, Model.Industrias, htmlAttributes: new { @class = "form-select update", data_init_plugin = "select2", required = "required" })
                            </div>
                            break;
                        case "PaisId":
                            <div class="form-group">
                                @Html.DropDownList(item.Name, Model.Paises, htmlAttributes: new { @class = "form-select update", data_init_plugin = "select2", required = "required" })
                            </div>
                            break;
                        default:
                            string CssClass = "form-control update";
                            CssClass += item.Confirm ? " confirm" : string.Empty;
                            CssClass += item.Compare ? " compare" : string.Empty;
                            <div class="col-12 mt-2">
                                <input type="text" class="@CssClass" id="@item.Name" name="@item.Name" value="@item.Value" />
                            </div>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
}